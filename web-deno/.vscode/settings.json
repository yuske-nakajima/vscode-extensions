{
  "deno.enable": false, // Denoの一般的な機能（型チェックなど）を無効化
  "deno.lint": false, // Denoのlint機能を明示的に無効化
  "deno.unstable": false, // Denoの不安定な機能を使用しない
  "deno.config": "deno.jsonc", // Denoの設定ファイルを指定
  "editor.formatOnSave": true, // 保存時に自動フォーマットを有効化
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno" // TypeScript ReactファイルのデフォルトフォーマッタをDenoに設定
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno" // TypeScriptファイルのデフォルトフォーマッタをDenoに設定
  },
  "deno.enablePaths": [
    "deno.jsonc" // deno.jsonc ファイルに対してのみDenoの機能（フォーマット）を有効化
  ],
  "deno.suggest.imports.hosts": {
    "https://deno.land": false // Denoのimport suggestionsを無効化
  },
  "typescript.validate.enable": true, // VS CodeのデフォルトTypeScript検証を有効化
  "javascript.validate.enable": true, // VS CodeのデフォルトJavaScript検証を有効化
  "deno.codeLens.implementations": false, // Denoの実装CodeLens機能を無効化
  "deno.codeLens.references": false, // Denoの参照CodeLens機能を無効化
  "deno.codeLens.referencesAllFunctions": false // Denoのすべての関数に対する参照CodeLens機能を無効化
}
